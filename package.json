{
  "name": "ronda-api",
  "version": "1.0.0",
  "description": "API for a Charity",
  "main": "server.js",
  "scripts": {
    "prestart": "npm run drop-sqlite-db || true",
    "start": "npm run nodemon",
    "poststart": "npm run create-sqlite-db",
    "dev": "cross-env NODE_ENV=development node server.js",
    "nodemon": "nodemon --exec npm run dev",
    "debug": "npm run start",
    "lint": "eslint .",
    "prepush": "npm test",
    "pretest": "npm run lint",
    "create-sqlite-db": "shx touch ./database/database.sqlite",
    "drop-sqlite-db": "shx rm ./database/database.sqlite",
    "test": "npm run create-sqlite-db; cross-env NODE_ENV=testing jest --coverage; npm run drop-sqlite-db",
    "test-ci": "jest --coverage --forceExit"
  },
  "keywords": [
    "API",
    "Charity"
  ],
  "author": "Andrea Canton <hello@andreacanton.dev>",
  "license": "MIT",
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.19.0",
    "convict": "^6.0.0",
    "convict-format-with-validator": "^6.0.0",
    "core-js": "^3.8.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.2.5",
    "sequelize": "^6.3.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "shx": "^0.3.3",
    "sqlite3": "^5.0.0",
    "supertest": "^6.0.1"
  }
}
