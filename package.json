{
  "name": "ronda-api",
  "version": "1.0.0",
  "description": "API for a Charity",
  "main": "server.js",
  "scripts": {
    "start": "npm run nodemon",
    "dev": "cross-env NODE_ENV=development node server.js",
    "nodemon": "nodemon --exec npm run dev",
    "debug": "npm run start",
    "lint": "eslint .",
    "prepush": "npm test",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test  jest --coverage",
    "test-ci": "cross-env NODE_ENV=test jest --coverage --forceExit",
    "db:migrate": "knex --cwd ./db migrate:latest",
    "db:rollback": "knex --cwd ./db migrate:rollback",
    "db:reset": "knex --cwd ./db migrate:rollback --all && npm run db:migrate",
    "db:seed": "knex --cwd ./db seed:run"
  },
  "keywords": [
    "API",
    "Charity"
  ],
  "author": "Andrea Canton <hello@andreacanton.dev>",
  "license": "MIT",
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.19.0",
    "bookshelf": "^1.2.0",
    "bookshelf-secure-password": "^5.0.0",
    "bookshelf-virtuals-plugin": "^1.0.0",
    "checkit": "^0.7.0",
    "convict": "^6.0.0",
    "convict-format-with-validator": "^6.0.0",
    "core-js": "^3.8.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.16",
    "lodash": "^4.17.20",
    "mock-knex": "^0.4.9",
    "mysql2": "^2.2.5",
    "nodemailer": "^6.4.17",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "shx": "^0.3.3",
    "sqlite3": "^5.0.0",
    "supertest": "^6.0.1"
  }
}
